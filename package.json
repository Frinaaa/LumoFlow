{
  "name": "lumoflow",
  "version": "0.0.1",
  "private": true,
  "main": "src/electron/main.js",
  "homepage": "./",
  "scripts": {
    "lint": "eslint .",
    "start": "npm run electron-dev",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "webpack serve --mode development",
    "build": "npm run build:app && npm run build:electron",
    "build:app": "webpack --mode production",
    "build:electron": "electron-builder",
    "test": "jest",
    "backend": "cd backend && nodemon index.js"
  },
  "dependencies": {
    "@react-navigation/native": "^7.1.26",
    "@react-navigation/native-stack": "^7.9.0",
    "@react-navigation/stack": "^7.6.13",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.3",
    "nodemailer": "^7.0.12",
    "path": "^0.12.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^6.30.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.25.0",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/runtime": "^7.25.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^25.0.0",
    "electron-is-dev": "^3.0.0",
    "eslint": "^8.19.0",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^29.6.3",
    "nodemon": "^3.0.1",
    "prettier": "2.8.8",
    "style-loader": "^4.0.0",
    "typescript": "^5.8.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "engines": {
    "node": ">=20"
  },
  "build": {
    "productName": "LumoFlow",
    "appId": "com.lumoflow.app",
    "files": [
      "build/**/*",
      "src/electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
