{
  "name": "lumoflow",
  "version": "0.0.1",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "vite",
    "build": "tsc && vite build",
    "electron-prod": "cross-env NODE_ENV=production electron .",
    "build:win": "npm run build && electron-builder --win --publish never",
    "lint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.22",
    "@google/genai": "^1.41.0",
    "@google/generative-ai": "^0.24.1",
    "@monaco-editor/react": "^4.7.0",
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.4",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.3",
    "electron-is-dev": "^3.0.0",
    "form-data": "^4.0.5",
    "google-auth-library": "^10.5.0",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.3",
    "node-pty": "^1.0.0",
    "nodemailer": "^7.0.12",
    "openai": "^6.21.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^23.0.6",
    "eslint": "^8.19.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "typescript-language-server": "^4.3.3",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.lumoflow.app",
    "productName": "LumoFlow",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "build/icon.png"
    },
    "mac": {
      "icon": "build/icon.png"
    }
  }
}